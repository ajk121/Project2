<% @messages.each do |message| %>
  <tr>
    <td><%= message.title %></td>
    <td><%= message.content %></td>
    <td><%= message.sender.name %></td>
    <td><%= message.receiver.name %></td>
    <br><td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp;&nbsp;&nbsp;<%= time_ago_in_words(message.created_at) %>&nbsp;ago</td>
  </tr>
<% end %>
</table>

