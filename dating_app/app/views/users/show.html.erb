<p id="notice"><%= notice %>

  <div class='profile_top_wrapper'>

    <div class='profile_image'>  
      <%= image_tag @user.image.url %>
    </div>
    <%= headshot_default_config(Rails.application.config.session_options[:key], headshot_capture_path) %>

    <%= headshot_camera %>

    <br/><br/>

    <%= headshot_snap_button('Shoot') %>
    <div class='profile_right_menu'>

      <div class='profile_name'><h1><%= @user.name %></h1></div>
      <div class= 'new_message_button_profile'><%= link_to 'SEND MESSAGE', new_message_path %></div>
      <div class='profile_role'><h3><%= @user.role%> USER</h3></div>

      <div class='about_me'>
        <p><%= @user.about_me %></p>
      </div>

    </div>
  </div>

  <div class ='profile_list'>
    <table class='profile_table'>
      <tr>
        <td>Age</td>
        <td><%= @user.age %></td>
      </tr>
      <tr>
        <td>Gender</td>
        <td><%= @user.gender %></td>
      </tr>
      <tr>
        <td>City</td>
        <td><%= @user.city %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>Interested in</td>
        <td><%= @user.sex_preference %></td>
      </tr>
      <tr>
        <td>Height in cm</td>
        <td><%= @user.height %></td>
      </tr>
      <tr>
        <td>Smoker</td>
        <td><%= @user.smoker %></td>
      </tr>
      <tr>
        <td>GitHub ID</td>
        <td><%= @user.github_id %></td>
      </tr>
      <tr>
        <td>Favourite code language</td>
        <td><%= @user.favourite_language %></td>
      </tr>
      <tr>
        <td>Stack Overflow Score</td>
        <td><%= @user.stackoverflow_score %></td>
      </tr>
      <tr>
        <td>Meet Ups</td>
        <td><%= @user.meet_ups %></td>
      </tr>
      <tr>
        <td>Front-end Or Back-end</td>
        <td><%= @user.front_backend  %></td>
      </tr>
    </table>
  </div>
  <br>

  <%if @user == current_user  %>
  <div class ='visits'>
  <%= link_to "#{@user.impressionist_count(start_date:Time.now-(24*60*60),end_date: Time.now)} visits to my profile in the past 3 days", user_receives_visit_path %>
  <%else%>
  <%end%>
</div>


