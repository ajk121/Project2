<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class ='edit_top_wrapper'>
  <div class='edit_image'>  
    <%= image_tag @user.image.url %>
    <%unless @user.role=""%>
    <h3><%= @user.role%> USER</h3>
  <%end%>
  </div>
  <div class='edit_right_menu'>
    <h2><%= f.text_field :name, placeholder: "Name"%></h2>
    <div><%= f.text_area :about_me %>
    </div>
  </div>
</div>

<div class ='edit_list'>
  <ul>
    <li><%= f.file_field :user_image %></li>
    <li><%= f.number_field :age, placeholder: 'Age' %></li>
    <li><%= f.text_field :gender,
     placeholder: 'Gender' %></li>
    <li><%= f.text_field :city, placeholder: 'City' %></li>
    <li><%= f.text_field :email, placeholder: 'Email' %></li>
    <li><%= f.text_field :sex_preference, placeholder: 'Interested In' %></li>
    <li><%= f.text_field :height, placeholder: 'Height' %></li>
    <li><div class ='selector'>
<select name="user[smoker]">
  <option value="true">Smoker</option>
  <option value="false">Non Smoker</option>
</select>
</div>
</li>
    <li><%= f.text_field :github_id, placeholder: 'GitHub Id' %></li>
    <li><%= f.text_field :favourite_language, placeholder: 'Favourite Code Language' %></li>
    <li><%= f.text_field :stackoverflow_score, placeholder: 'Stackoverflow Score' %></li>
    <li><%= f.text_field :meet_ups, placeholder: 'Meetups' %></li>
    <div class ='selector'>
    <li><select name="user[front_backend]">
  <option value="true">Front-End</option>
  <option value="false">Back-End</option>
</select>
</div></li>
  </ul>
</div>
<div class='update_user_button'>
<%= f.submit %>
</div>
<% end %>
