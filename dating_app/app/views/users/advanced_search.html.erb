<%= search_form_for @search, url: advanced_search_path do |f| %>
<%= f.condition_fields do |c|%>
<div class="field">
  <%= c.attribute_fields do |a| %>
  <%= a.attribute_select associations: :user%>              
  <% end %>
  <%= c.predicate_select %>
  <%= c.value_fields do |v| %>
  <%= v.text_field :value %>
  <% end %>
</div>
<% end %>
<%= f.submit %>
<% end %>
<button><%= sort_link @search, :name %></button>
<button><%= sort_link @search, :age %></button>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Age</th>
    <th></th>

</tr>

<% @users.each do |user| %>
<tr>
    <td><%= user.image %></td>
    <td><%= user.age %></td>
    <td><%= user.name %></td>

    <td><%= link_to 'Show', user %></td>

</tr>
<% end %>
</table>

<br />
